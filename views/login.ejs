<!-- When the /login page awhich authenticates the user information to what's stored inside the database -->

<!doctype html>
<html>
<head>


    <h1><span class="fa fa-sign-in"></span> Login</h1>

    <% if (message.length > 0) { %>
      <!-- the line is to prevent the user from making blank entries, this will work because the length of a blank field is -1  -->
        <div class="alert alert-danger"><%= message %></div>
        <!-- This creates an alert message to the user to ask them to login or create a login account  -->
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/login" method="post"> <!-- the form , using the method of POST this take your information and saves it into the database, line 102-128 on route.js *DO NOT ALTER route.js section*-->
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Login</button>
    </form>

    <hr>

    <p>Need an account? <a href="/signup">Signup</a></p>
    <p>Or go <a href="/">home</a>.</p>


</body>
</html>
